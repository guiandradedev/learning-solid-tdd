{
  "compilerOptions": {
    "target": "es2017",                         
    "module": "commonjs",                       
    "allowJs": true,                            
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,   
    "strict": true,                             
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./node_modules/@types", "src/@types"],             
  }
}
