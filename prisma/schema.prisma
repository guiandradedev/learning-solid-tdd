generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id         String       @id
    name       String
    email      String       @unique
    password   String
    active     Boolean
    
    quizzes    Quiz[]
    submissions Submission[]
    userTokens  UserToken[]
    userCodes   UserCode[]
}

model UserToken {
    id                      String   @id
    refreshToken            String
    refreshTokenExpiresDate Int
    createdAt               DateTime
    userId                  String

    user User @relation(fields: [userId], references: [id])
}

model UserCode {
    id        String   @id
    code      String
    expiresIn DateTime
    createdAt DateTime
    type      String
    active    Boolean
    userId    String

    user User @relation(fields: [userId], references: [id])
}

model Quiz {
    id        String   @id
    title     String
    createdAt DateTime
    ownerId   String

    owner      User         @relation(fields: [ownerId], references: [id])
    questions  Question[]
    Submission Submission[]
}

model Question {
    id            String @id
    question      String
    // answers: string[]
    correctAnswer Int
    quizId        String

    answers QuestionAnswers[]
    quiz    Quiz              @relation(fields: [quizId], references: [id])
}

model QuestionAnswers {
    id         String    @id
    answer     String
    position   Int
    questionId String?
    Question   Question? @relation(fields: [questionId], references: [id])
}

model Submission {
    id                String              @id
    userId            String
    quizId            String
    grade             Int
    createdAt         DateTime
    user              User                @relation(fields: [userId], references: [id])
    quiz              Quiz                @relation(fields: [quizId], references: [id])
    SubmissionAnswers SubmissionAnswers[]
}

model SubmissionAnswers {
    id           String  @id
    submissionId String
    answer       Int
    correct      Boolean

    submission Submission @relation(fields: [submissionId], references: [id])
}
